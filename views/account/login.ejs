<% include ../layout/header %>
<div class=''>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3 panel panel-default">
      <h1><span class="fa fa-sign-in"></span> Login</h1>
      <div class="panel-body">
        <form class="" role="form" action="/login" method="post">
          <input type='hidden' name='_csrf' value="<%= _csrf %>"/>
          <div class="form-group">
            <label for="inputEmail" class="control-label">Email address</label>
            <input type="text" class="form-control" id="inputEmail" name="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="control-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-warning btn-lg"><span class="fa fa-sign-in"></span> Login</button>
        </form>
        <hr/>
        <a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fa fa-facebook"></i> Sign in with Facebook</a>
        <a href="/auth/google" class="btn btn-primary btn-block"><i class="fa fa-google"></i> Sign in with Google</a>

        <hr/>
        <p>Need an account? <a href="/signup">Signup</a></p>
        <p>Or go <a href="/">home</a>.</p>
        <p><a href='/forgot'>Forgot your password?</a></p>
      </div>
    </div>
  </div>
</div>
    
<% include ../layout/footer %>