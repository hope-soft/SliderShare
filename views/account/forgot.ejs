<% include ../layout/header %>
	<div class=''>
	  <div class="container">
	    <div class="col-sm-6 col-sm-offset-3 panel panel-default">
	      <h1><span class="fa fa-key"></span> Signup</h1>
	        <form method="POST" action="/forgot">
			  <legend>Forgot Password</legend>
			  <input type='hidden' name='_csrf' value="<%= _csrf %>"/>
			  <div class="form-group">
			    <p>Enter your email address below and we will send you password reset instructions.</p>
			    <label for="email" class="control-label">Email</label>
			    <input type="email" name="email" id="email" placeholder="Email" autofocus="autofocus" class="form-control"/>
			  </div>
			  <div class="form-group">
			    <button type="submit" class="btn btn-primary"><i class="fa fa-key"></i> Reset Password</button>
			  </div>
			</form>
	      <hr>
	      <p>Already have an account? <a href="/login">Login</a></p>
	      <p>Or go <a href="/">home</a>.</p>
	    </div>
	  </div>
	</div>
<% include ../layout/footer %>
