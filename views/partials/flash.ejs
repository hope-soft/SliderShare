<% if (messages.errors){ %>
	<div class="alert alert-danger fade in">
	  <button type="button" data-dismiss="alert" class="close"><span class="ion-close-circled"></span></button>
	  	 <% for(var i=0; i<messages.errors.length; i++){ %>
	  	 	<%=  messages.errors[i].msg %>
	  	 <% } %>
	</div>
<% } %>

<% if (messages.info){ %>
	<div class="alert alert-info fade in">
	  <button type="button" data-dismiss="alert" class="close"><span class="ion-close-circled"></span></button>
	    <% for(var i=0; i<messages.info.length; i++){ %>
	    	<div><%=  messages.info[i].msg %></div>
	  	<% } %>
	</div>
<% } %>

<% if (messages.success){ %>
	<div class="alert alert-info fade in">
	  <button type="button" data-dismiss="alert" class="close"><span class="ion-close-circled"></span></button>
	    <% for(var i=0; i<messages.success.length; i++){ %>
	    	<div><%=  messages.success[i].msg %></div>
	  	<% } %>
	</div>
<% } %>