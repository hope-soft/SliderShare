      <ul class="nav navbar-nav navbar-right">
        <% if(!user){ %>
          <li><a href="/login"><span class="fa fa-sign-in"></span>  Login</a></li>
         <% }else{ %>
          <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle" id="dropdownMenu">
